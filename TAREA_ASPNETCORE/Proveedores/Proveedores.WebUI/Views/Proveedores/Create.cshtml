@model Proveedores.WebUI.Models.ProveedoresViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3>Create</h3>
        <h4>Proveedores</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div class="row">
                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <span asp-validation-for="prov_Empresa" class="text-danger"></span>
                        <label asp-for="prov_Empresa" class="control-label"></label>
                        <input asp-for="prov_Empresa" class="form-control" />

                    </div>
                    <div class="form-group">
                        <span asp-validation-for="prov_NombreContacto" class="text-danger"></span>
                        <label asp-for="prov_NombreContacto" class="control-label"></label>
                        <input asp-for="prov_NombreContacto" class="form-control" />

                    </div>
                    <div class="form-group">
                        <span asp-validation-for="prov_TelefonoContacto" class="text-danger"></span>
                        <label asp-for="prov_TelefonoContacto" class="control-label"></label>
                        <input asp-for="prov_TelefonoContacto" class="form-control" />

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <span asp-validation-for="prov_DireccionExacta" class="text-danger"></span>
                        <label asp-for="prov_DireccionExacta" class="control-label"></label>
                        <input asp-for="prov_DireccionExacta" class="form-control" />

                    </div>
                    <div class="form-group">
                        <span asp-validation-for="prov_DireccionExactaEmpresa" class="text-danger"></span>
                        <label asp-for="prov_DireccionExactaEmpresa" class="control-label"></label>
                        <input asp-for="prov_DireccionExactaEmpresa" class="form-control" />

                    </div>
                    <div class="form-group">
                        <span asp-validation-for="prov_SexoContacto" class="text-danger"></span>
                        <label asp-for="prov_SexoContacto" class="control-label"></label>
                        <br />
                        <div class="row">
                            <div class="col-sm-1"></div>
                            <label>F</label>
                            <input type="radio" value="F" asp-for="prov_SexoContacto" class="form-check-inline" />
                            <label>M</label>
                            <input type="radio" value="M" asp-for="prov_SexoContacto" class="form-check-inline" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a class="btn btn-dark" asp-action="Index">Volver</a>
            </div>
        </form>
    </div>
</div>